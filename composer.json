{
	"name":        "pxn/gcwebsite",
	"description": "Website for GrowControl",
	"type":        "project",
	"homepage":    "http://growcontrol.com/",
	"license":     "proprietary",
	"support": {
		"issues": "https://github.com/PoiXson/phpUtils/issues",
		"source": "https://github.com/PoiXson/phpUtils",
		"irc":    "irc://irc.esper.net/growcontrol"
	},
	"authors": [{
		"name":  "lorenzop",
		"role":  "Developer"
	}],
	"autoload": {
		"psr-4": {
			"pxn\\gcWebsite\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"pxn\\gcWebsite\\tests\\":    "tests/",
			"pxn\\gcWebsite\\examples\\": "examples/"
		}
	},
	"archive": {
		"exclude": [
			"tests/",
			"examples/"
		]
	},
	"require": {
		"php":                "5.6.*",
		"pxn/phpUtils":       "0.1.*",
		"twig/twig":          "v1.24.*",
		"components/jquery":  "2.2.*",
		"twbs/bootstrap":     "v3.3.*"
	},
	"require-dev": {
		"phpunit/phpunit": "5.*"
	},
	"scripts": {
		"post-update-cmd": [
			"echo 'Creating symlinks..'",
			"[ -d public/static ] || mkdir -pv public/static/",
			"ln -svf ../../vendor/twbs/bootstrap/ public/static/",
			"ln -svf ../../vendor/components/jquery/ public/static/",
			"ln -svf vendor/pxn/phputils/pxnloader.php pxnloader.php"
		]
	}
}
